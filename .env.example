# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telltide

# API Server
API_PORT=3000
API_HOST=localhost

# Worker
WORKER_INTERVAL_SECONDS=30

# SQD Portal
SQD_PORTAL_URL=https://portal.sqd.dev/datasets/ethereum-mainnet

# Indexer
# NOTE: Indexer always starts from this block (no cursor tracking)
# Set to a recent block to avoid re-indexing old data on restart
# Current mainnet is ~21M, so 20900000 gives you ~50k blocks (~7 days) of history
INDEXER_START_BLOCK=20900000
INDEXER_USE_CACHE=false

# Logging
LOG_LEVEL=info
