# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telltide

# API Server
API_PORT=3000
API_HOST=localhost

# Worker
WORKER_INTERVAL_SECONDS=30

# RPC Endpoints (for getting current block numbers)
ETHEREUM_RPC_URL=https://eth.llamarpc.com
BASE_RPC_URL=https://mainnet.base.org

# Indexer
# Max blocks to look back from current head (dynamically calculated on start)
# 10000 blocks â‰ˆ 1 day of data on Ethereum (~12s blocks)
# On startup, indexer fetches current head via RPC and starts from (head - MAX_LOOKBACK_BLOCKS)
INDEXER_MAX_LOOKBACK_BLOCKS=10000
INDEXER_USE_CACHE=false
# Comma-separated list of chains to index (ethereum, base)
INDEXER_ENABLED_CHAINS=ethereum,base

# Logging
LOG_LEVEL=info
