# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telltide

# API Server
API_PORT=3000
API_HOST=localhost

# Worker
WORKER_INTERVAL_SECONDS=30

# SQD Portal
SQD_PORTAL_URL=https://portal.sqd.dev/datasets/ethereum-mainnet

# Indexer
# Max blocks to look back from current head (dynamically calculated on start)
# 60000 blocks â‰ˆ 7 days of data (covers longest time window)
# On startup, indexer fetches current head and starts from (head - MAX_LOOKBACK_BLOCKS)
INDEXER_MAX_LOOKBACK_BLOCKS=60000
INDEXER_USE_CACHE=false

# Logging
LOG_LEVEL=info
